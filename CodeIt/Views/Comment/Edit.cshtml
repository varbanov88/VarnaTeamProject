@model CodeIt.Models.Comment
@{
    ViewBag.Title = "Edit Comment";
}
<div class="space20"></div>

@using (Html.BeginForm("Edit", "Comment", FormMethod.Post))
{

    <div class="container">

        
        <div class="form-group">
            @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })
            <div class="col-sm-4">
                @Html.TextAreaFor(m => m.Content, new { @class = "form-control comment", @style = "height: 200px; width: 400px" })
            </div>
            <br />
            <br />
            <div class="col-sm-4 col-sm-offset-4">
                <a href="/Code/Details/@Model.CodeId" class="btn btn-default">Cancel</a>
                <input type="submit" value="Edit" class="btn btn-success" />
            </div>
        </div>
        
    </div>
    

}