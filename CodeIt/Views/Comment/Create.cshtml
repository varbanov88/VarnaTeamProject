
@model CodeIt.Models.CommentViewModel
@{
    ViewBag.Title = "Create Comment";
}
<div class="space20"></div>

@using (Html.BeginForm("Create", "Comment", FormMethod.Post))
{

<div class="container">

        <div class="form-group">
            @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
            @Html.TextAreaFor(m => m.Content, new {@class = "form-control comment" ,@style = "height: 100px" })

        </div>
</div>
    <br>
    <div class="container">
        <input type="submit" value="Comment" class="btn btn-primary" />
    </div>

}
<div class="space20"></div>
<div class="space20"></div>
<div class="space20"></div>

<div id="selectable" class="ui-selectable container">
    <ol class="text well">
        @foreach (var line in Model.Code)
        {
            <li class="li1"> <div class="de1"><pre>@(line)</pre></div></li>
        }

    </ol>
</div>
