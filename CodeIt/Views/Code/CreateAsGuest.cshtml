@model CodeIt.Models.GuestCodeModel
@{ 
    ViewBag.Title = "New Guest Paste";
}
<div class="space20"></div>


@Html.ValidationSummary("", new { @class = "text-danger" })

<div class="space10"></div>

@using (Html.BeginForm("CreateAsGuest", "Code", FormMethod.Post))
{



    <div class="container">

        <div class="form-group space20">
            @Html.LabelFor(m => m.Author, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(m => m.Author, new { @class = "form-control" })
            <div class="space20"></div>

            @Html.LabelFor(m => m.CodeTitle, new { @class = "col-md-2 control-label" }) 
            @Html.TextBoxFor(m => m.CodeTitle, new { @class = "form-control" })
            
        </div>
        <div class="space20"></div>
        <div class="space20"></div>
        @Html.LabelFor(m => m.CodeContent, new { @class = "control-label col-md-2" })
        <textarea class="form-control paste_textarea" cols="100" data-val="true" data-val-required="The CodeContent field is required." id="CodeContent" name="CodeContent" style="resize: horizontal; height: 400px;"></textarea>
    </div>

    <br>
    <div class="container">
        <a href="/Home" class="btn btn-danger"><< Back</a>
        <input type="submit" value="Save Code" class="btn btn-primary" />
    </div>
}
