
@model IEnumerable<CodeIt.Models.AllGuestCodesModel>

@{
    ViewBag.Title = "All Guest Pastes";
}

<h2 class="text-center">Guest Codes - Page @ViewBag.CurrentPage</h2>


@if (!Model.Any())
{
    <h1 class="text-center">No more codes!</h1>
}

@foreach (var code in Model)
{
    <div>
        <div class="space10"></div>

        <h1>@code.CodeTitle</h1>
        <h3>@code.Author</h3>


        @{
            var currUserQuery1 = Request.QueryString["user"];

        }


        <a href="/Code/Details/@code.Id?pPage=@ViewBag.CurrentPage@(currUserQuery1 != null ? "&myUser=" + currUserQuery1 : string.Empty)" class="btn btn-info">See more >></a>
    </div>



    <hr class="lyne" />

            }


<div class="space20"></div>

@{
            var currUserQuery = Request.QueryString["user"];

}

<p class="text-center">
    <a href="/Code/AllGuest?page=@(ViewBag.CurrentPage-1)@(currUserQuery != null ? "&user=" + currUserQuery : string.Empty)" class="btn btn-success" @(ViewBag.CurrentPage == 1 ? "disabled" : string.Empty)> << Prev </a>

    <a href="/Code/AllGuest?page=@(ViewBag.CurrentPage+1)@(currUserQuery != null ? "&user=" + currUserQuery : string.Empty)" class="btn btn-success" @((!Model.Any() || Model.Count() < 10) ? "disabled" : string.Empty)> Next >> </a>

</p>